<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Personnel\Domain\Model\Firm\Personnel\PersonnelFileInfo" 
            table="PersonnelFileInfo" 
            repository-class="Personnel\Infrastructure\Persistence\Doctrine\Repository\DoctrinePersonnelFileInfoRepository" 
    >
        
        <many-to-one  field="personnel" 
                      target-entity="Personnel\Domain\Model\Firm\Personnel"
        >
            <join-column name="Personnel_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <one-to-one field="fileInfo" 
                    target-entity="Shared\Domain\Model\FileInfo"
        >
            <cascade><cascade-persist /></cascade>
            <join-column name="FileInfo_id" referenced-column-name="id" />
        </one-to-one>
        <field name="removed" type="boolean" />
        
    </entity>
</doctrine-mapping>
