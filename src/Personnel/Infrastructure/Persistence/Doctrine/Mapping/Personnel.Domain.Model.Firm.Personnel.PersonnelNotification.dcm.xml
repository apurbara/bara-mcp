<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Personnel\Domain\Model\Firm\Personnel\PersonnelNotification" 
            table="PersonnelNotification"
            repository-class="Personnel\Infrastructure\Persistence\Doctrine\Repository\DoctrinePersonnelNotificationRepository"  
    >
        <many-to-one  field="personnel" 
                      target-entity="Personnel\Domain\Model\Firm\Personnel"
        >
            <join-column name="Personnel_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <field name="message" type="string" length="256" nullable="false"/>
        <field name="read" column="isRead" type="boolean" />
        <field name="notifiedTime" type="datetime_immutable" nullable="false"/>
        
        <many-to-one  field="consultationRequest" 
                      target-entity="Personnel\Domain\Model\Firm\Personnel\ProgramConsultant\ConsultationRequest"
        >
            <join-column name="ConsultationRequest_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="consultationSession" 
                      target-entity="Personnel\Domain\Model\Firm\Personnel\ProgramConsultant\ConsultationSession"
        >
            <join-column name="ConsultationSession_id" referenced-column-name="id" />
        </many-to-one>
        
    </entity>
</doctrine-mapping>
