<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Personnel\Domain\Model\Firm\Personnel\PersonnelNotification" 
            table="PersonnelNotification" 
    >
        <many-to-one  field="personnel" 
                      target-entity="Personnel\Domain\Model\Firm\Personnel"
        >
            <join-column name="Personnel_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <one-to-one field="notification" 
                    target-entity="Shared\Domain\Model\Notification"
        >
            <join-column name="Notification_id" referenced-column-name="id" />
            <cascade><cascade-persist /></cascade>
        </one-to-one>
        
    </entity>
</doctrine-mapping>
