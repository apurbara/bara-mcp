<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\Firm\Manager\ManagerInvitation" 
            table="ManagerInvitation"
            repository-class="Query\Infrastructure\Persistence\Doctrine\Repository\DoctrineManagerInvitationRepository"
    >
        
        <many-to-one  field="manager" 
                      target-entity="Query\Domain\Model\Firm\Manager"
        >
            <join-column name="Manager_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="invitation" 
                    target-entity="Query\Domain\Model\Firm\Program\Activity\Invitation"
                    inversed-by="managerInvitation"
        >
            <join-column name="Invitation_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
