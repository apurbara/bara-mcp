<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\Firm\Program\Activity\Invitation" 
            table="Invitation"
            repository-class="Query\Infrastructure\Persistence\Doctrine\Repository\DoctrineInvitationRepository"
    >
        
        <many-to-one  field="activity" 
                      target-entity="Query\Domain\Model\Firm\Program\Activity"
                      inversed-by="invitations"
        >
            <join-column name="Activity_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="willAttend" type="boolean" nullable="true" />
        <field name="attended" type="boolean"  nullable="true" />
        <field name="removed" type="boolean" />
        
        <one-to-one field="managerInvitation" 
                    target-entity="Query\Domain\Model\Firm\Manager\ManagerInvitation"
                    mapped-by="invitation"
        />
        
        <one-to-one field="coordinatorInvitation" 
                    target-entity="Query\Domain\Model\Firm\Program\Coordinator\CoordinatorInvitation"
                    mapped-by="invitation"
        />
        
        <one-to-one field="consultantInvitation" 
                    target-entity="Query\Domain\Model\Firm\Program\Consultant\ConsultantInvitation"
                    mapped-by="invitation"
        />
        
        <one-to-one field="participantInvitation" 
                    target-entity="Query\Domain\Model\Firm\Program\Participant\ParticipantInvitation"
                    mapped-by="invitation"
        />
        
    </entity>
</doctrine-mapping>
