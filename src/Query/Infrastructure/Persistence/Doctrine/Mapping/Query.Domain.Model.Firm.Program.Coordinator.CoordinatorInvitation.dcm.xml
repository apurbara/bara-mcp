<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\Firm\Program\Coordinator\CoordinatorInvitation" 
            table="CoordinatorInvitation"
            repository-class="Query\Infrastructure\Persistence\Doctrine\Repository\DoctrineCoordinatorInvitationRepository"
    >
        
        <many-to-one  field="coordinator" 
                      target-entity="Query\Domain\Model\Firm\Program\Coordinator"
        >
            <join-column name="Coordinator_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="invitation" 
                    target-entity="Query\Domain\Model\Firm\Program\Activity\Invitation"
                    inversed-by="coordinatorInvitation"
        >
            <join-column name="Invitation_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
