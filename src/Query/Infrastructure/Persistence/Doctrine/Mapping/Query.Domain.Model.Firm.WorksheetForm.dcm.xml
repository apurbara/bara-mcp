<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\Firm\WorksheetForm" 
            table="WorksheetForm" 
            repository-class="Query\Infrastructure\Persistence\Doctrine\Repository\DoctrineWorksheetFormRepository" 
    >
        
        <many-to-one  field="firm" 
                      target-entity="Query\Domain\Model\Firm"
        >
            <join-column name="Firm_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="form" 
                    target-entity="Query\Domain\Model\Shared\Form"
        >
            <join-column name="Form_id" referenced-column-name="id" />
        </one-to-one>
        
        <field name="removed" type="boolean" />
        
    </entity>
</doctrine-mapping>
