<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\User\UserNotificationRecipient" 
            table="UserNotificationRecipient" 
            repository-class="Query\Infrastructure\Persistence\Doctrine\Repository\DoctrineUserNotificationRecipientRepository"
    >
        
        <many-to-one  field="user" 
                      target-entity="Query\Domain\Model\User"
        >
            <join-column name="User_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <many-to-one  field="notification" 
                      target-entity="Query\Domain\SharedModel\Notification"
        >
            <join-column name="Notification_id" referenced-column-name="id" />
        </many-to-one>
        
        <field name="read" column="readStatus" type="boolean" />
        <field name="notifiedTime" type="datetime_immutable" nullable="false"/>
        
    </entity>
</doctrine-mapping>
