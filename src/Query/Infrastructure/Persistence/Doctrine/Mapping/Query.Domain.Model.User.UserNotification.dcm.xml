<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\User\UserNotification" 
            table="ClientNotification"
            repository-class="Query\Infrastructure\Persistence\Doctrine\Repository\DoctrineClientNotificationRepository"  
    >
        <many-to-one  field="user" 
                      target-entity="Query\Domain\Model\User"
        >
            <join-column name="Client_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <field name="message" type="string" length="256" nullable="false"/>
        <field name="read" column="isRead" type="boolean" />
        <field name="notifiedTime" type="datetime_immutable" nullable="false"/>
        
        <many-to-one  field="consultationRequest" 
                      target-entity="Query\Domain\Model\Firm\Program\ConsultationSetup\ConsultationRequest"
        >
            <join-column name="ConsultationRequest_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="consultationSession" 
                      target-entity="Query\Domain\Model\Firm\Program\ConsultationSetup\ConsultationSession"
        >
            <join-column name="ConsultationSession_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="comment" 
                      target-entity="Query\Domain\Model\Firm\Program\Participant\Worksheet\Comment"
        >
            <join-column name="Comment_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="participant" 
                      target-entity="Query\Domain\Model\Firm\Program\Participant"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        
    </entity>
</doctrine-mapping>
