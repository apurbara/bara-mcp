<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\Firm\Program\Consultant\ConsultantInvitation" 
            table="ConsultantInvitation"
            repository-class="Query\Infrastructure\Persistence\Doctrine\Repository\DoctrineConsultantInvitationRepository"
    >
        
        <many-to-one  field="consultant" 
                      target-entity="Query\Domain\Model\Firm\Program\Consultant"
        >
            <join-column name="Consultant_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="invitation" 
                    target-entity="Query\Domain\Model\Firm\Program\Activity\Invitation"
                    inversed-by="consultantInvitation"
        >
            <join-column name="Invitation_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
