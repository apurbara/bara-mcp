<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Query\Domain\Model\Firm\Program\Activity" 
            table="Activity" 
    >
        
        <many-to-one  field="program" 
                      target-entity="Query\Domain\Model\Firm\Program"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <many-to-one  field="activityType" 
                      target-entity="Query\Domain\Model\Firm\Program\ActivityType"
        >
            <join-column name="ActivityType_id" referenced-column-name="id" />
        </many-to-one>
        
        <field name="name" type="string" length="256" nullable="false"/>
        <field name="description" type="string" length="1024" nullable="true"/>

        <embedded name="startEndTime" 
                  class="Resources\Domain\ValueObject\DateTimeInterval" 
                  use-column-prefix="false" />        
        
        <field name="location" type="string" length="1024" nullable="true"/>
        <field name="note" type="string" length="1024" nullable="true"/>
        <field name="cancelled" type="boolean" />
        <field name="createdTime" type="datetime_immutable" nullable="false"/>
        
        <one-to-many field="invitations" 
                     target-entity="Query\Domain\Model\Firm\Program\Activity\Invitation" 
                     mapped-by="activity"
        />
        
        <one-to-one field="managerActivity" 
                     target-entity="Query\Domain\Model\Firm\Manager\ManagerActivity" 
                     mapped-by="activity"
        />
        <one-to-one field="coordinatorActivity" 
                     target-entity="Query\Domain\Model\Firm\Program\Coordinator\CoordinatorActivity" 
                     mapped-by="activity"
        />
        <one-to-one field="consultantActivity" 
                     target-entity="Query\Domain\Model\Firm\Program\Consultant\ConsultantActivity" 
                     mapped-by="activity"
        />
        <one-to-one field="participantActivity" 
                     target-entity="Query\Domain\Model\Firm\Program\Participant\ParticipantActivity" 
                     mapped-by="activity"
        />
        
    </entity>
</doctrine-mapping>
