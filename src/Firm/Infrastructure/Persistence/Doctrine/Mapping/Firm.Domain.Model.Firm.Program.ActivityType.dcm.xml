<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Firm\Domain\Model\Firm\Program\ActivityType" 
            table="ActivityType"
            repository-class="Firm\Infrastructure\Persistence\Doctrine\Repository\DoctrineActivityTypeRepository"  
    >
        
        <many-to-one  field="program" 
                      target-entity="Firm\Domain\Model\Firm\Program"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="name" type="string" length="256" nullable="false"/>
        <field name="description" type="string" length="1024" nullable="true"/>
        
        <one-to-many field="participants" 
                     target-entity="Firm\Domain\Model\Firm\Program\ActivityType\ActivityParticipant" 
                     mapped-by="activityType"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-many>
        
    </entity>
</doctrine-mapping>
