<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Firm\Domain\Model\Firm\Program\Participant\MetricAssignment\AssignmentField" 
            table="AssignmentField" 
    >
        
        <many-to-one field="metricAssignment" 
                     target-entity="Firm\Domain\Model\Firm\Program\Participant\MetricAssignment" 
                     inversed-by="assignmentFields"
        >
            <join-column name="MetricAssignment_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <many-to-one field="metric" 
                     target-entity="Firm\Domain\Model\Firm\Program\Metric" 
        >
            <join-column name="Metric_id" referenced-column-name="id" />
        </many-to-one>
        
        <field name="target" type="integer" nullable="false"/>
        
        <field name="disabled" type="boolean" />
        
    </entity>
</doctrine-mapping>
