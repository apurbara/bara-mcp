<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Firm\Domain\Model\Firm\Program\Mission" 
            table="Mission" 
            repository-class="Firm\Infrastructure\Persistence\Doctrine\Repository\DoctrineMissionRepository" 
    >
        <many-to-one  field="program" 
                      target-entity="Firm\Domain\Model\Firm\Program"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one field="parent" 
                    target-entity="Firm\Domain\Model\Firm\Program\Mission" 
                    inversed-by="branches"
        >
            <join-column name="parent_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <field name="name" type="string" length="256" nullable="false"/>
        <field name="description" type="text" nullable="true"/>
        <field name="published" type="boolean"/>
        <field name="position" type="string" length="256" nullable="true"/>
        <many-to-one  field="worksheetForm" 
                      target-entity="Firm\Domain\Model\Firm\WorksheetForm"
        >
            <join-column name="WorksheetForm_id" referenced-column-name="id" />
        </many-to-one>
        <one-to-many field="branches" 
                    target-entity="Firm\Domain\Model\Firm\Program\Mission" 
                    mapped-by="parent"
        />
        
    </entity>
</doctrine-mapping>
