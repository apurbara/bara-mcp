<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Firm\Domain\Model\Firm\ClientCVForm" 
            table="ClientCVForm"
            repository-class="Firm\Infrastructure\Persistence\Doctrine\Repository\DoctrineClientCVFormRepository"
    >
        
        <many-to-one  field="firm" 
                      target-entity="Firm\Domain\Model\Firm"
                      inversed-by="clientCVForms"
        >
            <join-column name="Firm_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="disabled" type="boolean" />
        
        <many-to-one  field="profileForm" 
                      target-entity="Firm\Domain\Model\Firm\ProfileForm"
        >
            <join-column name="ProfileForm_id" referenced-column-name="id" />
        </many-to-one>
        
    </entity>
</doctrine-mapping>
