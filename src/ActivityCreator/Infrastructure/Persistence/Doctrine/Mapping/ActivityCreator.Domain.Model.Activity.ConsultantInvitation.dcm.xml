<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="ActivityCreator\Domain\Model\Activity\ConsultantInvitation" 
            table="ConsultantInvitation"
    >
        
        <many-to-one  field="consultant" 
                      target-entity="ActivityCreator\Domain\DependencyModel\Firm\Personnel\Consultant"
        >
            <join-column name="Consultant_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="invitation" 
                    target-entity="ActivityCreator\Domain\Model\Activity\Invitation"
                    inversed-by="consultantInvitation"
        >
            <join-column name="Invitation_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
