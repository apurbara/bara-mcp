<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="ActivityCreator\Domain\Model\ParticipantActivity" 
            table="ParticipantActivity" 
            repository-class="ActivityCreator\Infrastructure\Persistence\Doctrine\Repository\DoctrineParticipantActivityRepository" 
    >
        
        <many-to-one  field="participant" 
                      target-entity="ActivityCreator\Domain\DependencyModel\Firm\Program\Participant"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one  field="activity" 
                     target-entity="ActivityCreator\Domain\Model\Activity"
        >
            <cascade> <cascade-persist /> </cascade>
            <join-column name="Activity_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
