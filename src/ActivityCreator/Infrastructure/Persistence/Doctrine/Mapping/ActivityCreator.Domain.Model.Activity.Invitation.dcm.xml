<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="ActivityCreator\Domain\Model\Activity\Invitation" 
            table="Invitation"
    >
        
        <many-to-one  field="activity" 
                      target-entity="ActivityCreator\Domain\Model\Activity"
        >
            <join-column name="Activity_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="willAttend" type="boolean" />
        <field name="attended" type="boolean" />
        <field name="removed" type="boolean" />
        
        <one-to-one field="managerInvitation" 
                    target-entity="ActivityCreator\Domain\Model\Activity\ManagerInvitation"
                    mapped-by="invitation"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-one>
        
        <one-to-one field="coordinatorInvitation" 
                    target-entity="ActivityCreator\Domain\Model\Activity\CoordinatorInvitation"
                    mapped-by="invitation"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-one>
        
        <one-to-one field="consultantInvitation" 
                    target-entity="ActivityCreator\Domain\Model\Activity\ConsultantInvitation"
                    mapped-by="invitation"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-one>
        
        <one-to-one field="participantInvitation" 
                    target-entity="ActivityCreator\Domain\Model\Activity\ParticipantInvitation"
                    mapped-by="invitation"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-one>
        
    </entity>
</doctrine-mapping>
