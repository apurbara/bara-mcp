<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="ActivityCreator\Domain\Model\Activity\ParticipantInvitation" 
            table="ParticipantInvitation"
    >
        
        <many-to-one  field="participant" 
                      target-entity="ActivityCreator\Domain\DependencyModel\Firm\Program\Participant"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="invitation" 
                    target-entity="ActivityCreator\Domain\Model\Activity\Invitation"
                    inversed-by="participantInvitation"
        >
            <join-column name="Invitation_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
