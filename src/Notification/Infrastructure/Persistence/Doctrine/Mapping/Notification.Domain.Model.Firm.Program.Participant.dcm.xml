<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Notification\Domain\Model\Firm\Program\Participant" 
            table="Participant" 
    >
        
        <many-to-one  field="program" 
                      target-entity="Notification\Domain\Model\Firm\Program"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="enrolledTime" type="datetime_immutable" nullable="true"/>
        <field name="active" type="boolean" />
        <field name="note" type="string" length="256" nullable="true"/>
        
        <one-to-one field="clientParticipant" 
                    target-entity="Notification\Domain\Model\Firm\Client\ClientParticipant"
                    mapped-by="participant"
        />
        
        <one-to-one field="userParticipant" 
                    target-entity="Notification\Domain\Model\User\UserParticipant"
                    mapped-by="participant"
        />
        
    </entity>
</doctrine-mapping>
