<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Notification\Domain\Model\Firm\Program\Participant\Worksheet\ConsultantComment" 
            table="ConsultantComment" 
            repository-class="Notification\Infrastructure\Persistence\Doctrine\Repository\DoctrineConsultantCommentRepository"
    >
        <many-to-one  field="worksheet" 
                      target-entity="Notification\Domain\Model\Firm\Program\Participant\Worksheet"
        >
            <join-column name="Worksheet_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <many-to-one  field="consultant" 
                      target-entity="Notification\Domain\Model\Firm\Program\Consultant"
        >
            <join-column name="Consultant_id" referenced-column-name="id" />
        </many-to-one>
        
        <one-to-one field="comment" 
                    target-entity="Notification\Domain\Model\Firm\Program\Participant\Worksheet\Comment"
                    inversed-by="consultantComment"
        >
            <join-column name="Comment_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>
