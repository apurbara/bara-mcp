<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Notification\Domain\Model\Firm\Program\UserParticipant" 
            table="UserParticipant" 
    >
        
        <many-to-one  field="program" 
                      target-entity="Notification\Domain\Model\Firm\Program"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <many-to-one  field="user" 
                      target-entity="Notification\Domain\Model\User"
        >
            <join-column name="User_id" referenced-column-name="id" />
        </many-to-one>
        
        <one-to-one field="participant" 
                    target-entity="Notification\Domain\Model\Firm\Program\Participant"
                    inversed-by="userParticipant"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
