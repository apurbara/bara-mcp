<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Participant\Domain\Model\Participant\Worksheet\ParticipantComment" 
            table="ParticipantComment" 
            repository-class="Participant\Infrastructure\Persistence\Doctrine\Repository\DoctrineParticipantCommentRepository"
    >
        
        <many-to-one  field="worksheet" 
                      target-entity="Participant\Domain\Model\Participant\Worksheet"
        >
            <join-column name="Worksheet_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <one-to-one field="comment" 
                    target-entity="SharedContext\Domain\Model\SharedEntity\Comment"
        >
            <cascade><cascade-persist /></cascade>
            <join-column name="Comment_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>
