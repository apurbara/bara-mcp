<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="User\Domain\Model\User\ProgramParticipation\ParticipantFileInfo" 
            table="ParticipantFileInfo" 
            repository-class="User\Infrastructure\Persistence\Doctrine\Repository\DoctrineParticipantFileInfoRepository" 
    >
        
        <many-to-one  field="programParticipation" 
                      target-entity="User\Domain\Model\User\ProgramParticipation"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <one-to-one field="fileInfo" 
                    target-entity="Shared\Domain\Model\FileInfo"
        >
            <cascade><cascade-persist /></cascade>
            <join-column name="FileInfo_id" referenced-column-name="id" />
        </one-to-one>
        <field name="removed" type="boolean" />
        
    </entity>
</doctrine-mapping>
