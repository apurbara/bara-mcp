<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Participant\Domain\Model\DependencyEntity\Firm\Program\Mission" 
            table="Mission" 
            repository-class="Participant\Infrastructure\Persistence\Doctrine\Repository\DoctrineMissionRepository" 
    >
        
        <field name="programId" column="Program_id" type="guid" nullable="false"/>
        <many-to-one field="parent" 
                    target-entity="Participant\Domain\Model\DependencyEntity\Firm\Program\Mission" 
                    inversed-by="branches"
        >
            <join-column name="parent_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="published" type="boolean"/>
        
        <many-to-one  field="worksheetForm" 
                      target-entity="Participant\Domain\Model\DependencyEntity\Firm\WorksheetForm"
        >
            <join-column name="WorksheetForm_id" referenced-column-name="id" />
        </many-to-one>
        
        <one-to-many field="branches" 
                    target-entity="Participant\Domain\Model\DependencyEntity\Firm\Program\Mission" 
                    mapped-by="parent"
        />
        
    </entity>
</doctrine-mapping>
