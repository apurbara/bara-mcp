<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="User\Domain\Model\User\UserNotification" 
            table="UserNotification"
            repository-class="User\Infrastructure\Persistence\Doctrine\Repository\DoctrineUserNotificationRepository"  
    >
        <many-to-one  field="user" 
                      target-entity="User\Domain\Model\User"
        >
            <join-column name="User_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <field name="message" type="string" length="256" nullable="false"/>
        <field name="read" column="isRead" type="boolean" />
        <field name="notifiedTime" type="datetime_immutable" nullable="false"/>
        
        <many-to-one  field="consultationRequest" 
                      target-entity="User\Domain\Model\User\ProgramParticipation\ConsultationRequest"
        >
            <join-column name="ConsultationRequest_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="consultationSession" 
                      target-entity="User\Domain\Model\User\ProgramParticipation\ConsultationSession"
        >
            <join-column name="ConsultationSession_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="comment" 
                      target-entity="User\Domain\Model\User\ProgramParticipation\Worksheet\Comment"
        >
            <join-column name="Comment_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="programParticipation" 
                      target-entity="User\Domain\Model\User\ProgramParticipation"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        
    </entity>
</doctrine-mapping>
