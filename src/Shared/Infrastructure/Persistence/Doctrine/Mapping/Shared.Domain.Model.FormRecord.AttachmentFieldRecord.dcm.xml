<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Shared\Domain\Model\FormRecord\AttachmentFieldRecord" 
            table="AttachmentFieldRecord" 
    >
        
        <many-to-one  field="formRecord" 
                      target-entity="Shared\Domain\Model\FormRecord"
                      inversed-by="attachmentFieldRecords"
        >
            <join-column name="FormRecord_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <many-to-one  field="attachmentField" 
                      target-entity="Shared\Domain\Model\Form\AttachmentField"
        >
            <join-column name="AttachmentField_id" referenced-column-name="id" />
        </many-to-one>
        <field name="removed" type="boolean" />
        <one-to-many  field="attachedFiles" 
                      target-entity="Shared\Domain\Model\FormRecord\AttachmentFieldRecord\AttachedFile"
                      mapped-by="attachmentFieldRecord"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-many>
        
    </entity>
</doctrine-mapping>
