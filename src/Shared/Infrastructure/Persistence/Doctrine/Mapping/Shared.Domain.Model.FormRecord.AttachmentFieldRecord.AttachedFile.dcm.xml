<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Shared\Domain\Model\FormRecord\AttachmentFieldRecord\AttachedFile" 
            table="AttachedFile" 
    >
        
        <many-to-one  field="attachmentFieldRecord" 
                      target-entity="Shared\Domain\Model\FormRecord\AttachmentFieldRecord"
                      inversed-by="attachedFiles"
        >
            <join-column name="AttachmentFieldRecord_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <many-to-one  field="fileInfo" 
                      target-entity="Shared\Domain\Model\FileInfo"
        >
            <join-column name="FileInfo_id" referenced-column-name="id" />
        </many-to-one>
        <field name="removed" type="boolean" />
        
    </entity>
</doctrine-mapping>
