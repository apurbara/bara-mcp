<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Shared\Domain\Model\Form" 
            table="Form"
    >
        
        <id name="id" type="guid" />
        <field name="name" type="string" length="256" nullable="false"/>
        <field name="description" type="string" length="1024" nullable="true"/>
        <one-to-many  field="stringFields" 
                      target-entity="Shared\Domain\Model\Form\StringField"
                      mapped-by="form"
        />
        <one-to-many  field="integerFields" 
                      target-entity="Shared\Domain\Model\Form\IntegerField"
                      mapped-by="form"
        />
        <one-to-many  field="textAreaFields" 
                      target-entity="Shared\Domain\Model\Form\TextAreaField"
                      mapped-by="form"
        />
        <one-to-many  field="attachmentFields" 
                      target-entity="Shared\Domain\Model\Form\AttachmentField"
                      mapped-by="form"
        />
        <one-to-many  field="singleSelectFields" 
                      target-entity="Shared\Domain\Model\Form\SingleSelectField"
                      mapped-by="form"
        />
        <one-to-many  field="multiSelectFields" 
                      target-entity="Shared\Domain\Model\Form\MultiSelectField"
                      mapped-by="form"
        />
                
    </entity>
</doctrine-mapping>
