<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Shared\Domain\Model\FormRecord\MultiSelectFieldRecord" 
            table="MultiSelectFieldRecord" 
    >
        
        <many-to-one  field="formRecord" 
                      target-entity="Shared\Domain\Model\FormRecord"
                      inversed-by="multiSelectFieldRecords"
        >
            <join-column name="FormRecord_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <many-to-one  field="multiSelectField" 
                      target-entity="Shared\Domain\Model\Form\MultiSelectField"
        >
            <join-column name="MultiSelectField_id" referenced-column-name="id" />
        </many-to-one>
        <field name="removed" type="boolean" />
        <one-to-many  field="selectedOptions" 
                      target-entity="Shared\Domain\Model\FormRecord\MultiSelectFieldRecord\SelectedOption"
                      mapped-by="multiSelectFieldRecord"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-many>
        
    </entity>
</doctrine-mapping>
