<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Client\ProgramParticipation\ConsultationRequest" 
            table="ConsultationRequest" 
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineConsultationRequestRepository" 
    >
        
        <many-to-one  field="programParticipation" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation"
                      inversed-by="consultationRequests"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <many-to-one  field="consultationSetup" 
                      target-entity="Client\Domain\Model\Firm\Program\ConsultationSetup"
        >
            <join-column name="ConsultationSetup_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="consultant" 
                      target-entity="Client\Domain\Model\Firm\Program\Consultant"
        >
            <join-column name="Consultant_id" referenced-column-name="id" />
        </many-to-one>
        <embedded name="startEndTime" 
                  class="Resources\Domain\ValueObject\DateTimeInterval" 
                  use-column-prefix="false" 
        />
        <field name="concluded" type="boolean" />
        <embedded name="status" 
                  class="Shared\Domain\Model\ConsultationRequestStatusVO" 
                  use-column-prefix="false" 
        />
        
    </entity>
</doctrine-mapping>
