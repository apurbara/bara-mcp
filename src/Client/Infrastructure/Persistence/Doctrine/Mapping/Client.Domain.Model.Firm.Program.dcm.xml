<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Firm\Program" 
            table="Program" 
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineProgramRepository" 
    >
        <many-to-one field="firm" 
                     target-entity="Client\Domain\Model\Firm" 
        >
            <join-column name="Firm_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <field name="name" type="string" length="256" nullable="false"/>
        <field name="description" type="text" nullable="true"/>
        <field name="published" type="boolean" />
        <field name="removed" type="boolean" />
        
        <one-to-many  field="registrationPhases" 
                      target-entity="Client\Domain\Model\Firm\Program\RegistrationPhase"
                      mapped-by="program" 
        />
        
    </entity>
</doctrine-mapping>
