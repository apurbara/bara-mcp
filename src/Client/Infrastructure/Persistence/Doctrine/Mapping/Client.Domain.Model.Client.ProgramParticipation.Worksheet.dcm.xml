<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Client\ProgramParticipation\Worksheet" 
            table="Worksheet" 
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineWorksheetRepository"
    >
        <many-to-one  field="programParticipation" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="parent" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation\Worksheet"
        >
            <join-column name="parent_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <field name="name" type="string" length="256" nullable="false"/>
        <many-to-one  field="mission" 
                      target-entity="Client\Domain\Model\Firm\Program\Mission"
        >
            <join-column name="Mission_id" referenced-column-name="id" />
        </many-to-one>
        <one-to-one field="formRecord" 
                    target-entity="Shared\Domain\Model\FormRecord"
        >
            <cascade><cascade-persist /></cascade>
            <join-column name="FormRecord_id" referenced-column-name="id" />
        </one-to-one>
        <field name="removed" type="boolean" />
        
    </entity>
</doctrine-mapping>
