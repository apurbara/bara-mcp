<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Firm\Program\Consultant" 
            table="Consultant" 
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineConsultantRepository" 
    >
        <many-to-one  field="program" 
                      target-entity="Client\Domain\Model\Firm\Program"
                      inversed-by="consultants"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <many-to-one  field="personnel" 
                      target-entity="Query\Domain\Model\Firm\Personnel"
        >
            <join-column name="Personnel_id" referenced-column-name="id" />
        </many-to-one>
        <field name="removed" type="boolean" />
        
        <one-to-many field="consultationSessions" 
                     target-entity="Client\Domain\Model\Client\ProgramParticipation\ConsultationSession"
                     mapped-by="consultant"
        />
        
    </entity>
</doctrine-mapping>
