<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Client\ClientCV" 
            table="ClientCV"
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineClientCVRepository"
    >
        
        <many-to-one  field="client" 
                      target-entity="Client\Domain\Model\Client"
                      inversed-by="clientCVs"
        >
            <join-column name="Client_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        <field name="removed" type="boolean" />
        
        <many-to-one  field="clientCVForm" 
                      target-entity="Client\Domain\DependencyModel\Firm\ClientCVForm"
        >
            <join-column name="ClientCVForm_id" referenced-column-name="id" />
        </many-to-one>
        
        <one-to-one field="formRecord" 
                    target-entity="SharedContext\Domain\Model\SharedEntity\FormRecord"
        >
            <cascade><cascade-persist /></cascade>
            <join-column name="FormRecord_id" referenced-column-name="id" />
        </one-to-one>
        
    </entity>
</doctrine-mapping>
