<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Client\ProgramParticipation" 
            table="Participant" 
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineProgramParticipationRepository"
    >
        
        <many-to-one  field="client" 
                      target-entity="Client\Domain\Model\Client"
                      inversed-by="programParticipations"
        >
            <join-column name="Client_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <many-to-one  field="program" 
                      target-entity="Client\Domain\Model\Firm\Program"
        >
            <join-column name="Program_id" referenced-column-name="id" />
        </many-to-one>
        <field name="acceptedTime" type="datetime_immutable" nullable="true"/>
        <field name="active" type="boolean" />
        <field name="note" type="string" length="256" nullable="true"/>
        
        <one-to-many field="consultationRequests" 
                     target-entity="Client\Domain\Model\Client\ProgramParticipation\ConsultationRequest"
                     mapped-by="programParticipation"
        />
        <one-to-many field="consultationSessions" 
                     target-entity="Client\Domain\Model\Client\ProgramParticipation\ConsultationSession"
                     mapped-by="programParticipation"
        >
            <cascade><cascade-persist /></cascade>
        </one-to-many>
        
    </entity>
</doctrine-mapping>
