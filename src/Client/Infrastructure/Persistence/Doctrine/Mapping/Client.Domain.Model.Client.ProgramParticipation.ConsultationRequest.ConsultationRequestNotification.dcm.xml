<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Client\ProgramParticipation\ConsultationRequest\ConsultationRequestNotification" 
            table="ConsultationRequestNotificationForClient" 
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineConsultationRequestNotificationRepository" 
    >
        <many-to-one  field="consultationRequest" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation\ConsultationRequest"
        >
            <join-column name="ConsultationRequest_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <one-to-one field="clientNotification" 
                    target-entity="Client\Domain\Model\Client\ClientNotification"
                    inversed-by="consultationRequestNotification"
        >
            <join-column name="ClientNotification_id" referenced-column-name="id" />
            <cascade><cascade-persist /></cascade>
        </one-to-one>
        
    </entity>
</doctrine-mapping>
