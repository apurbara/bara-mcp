<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Firm\WorksheetForm" 
            table="WorksheetForm" 
    >
        
        <many-to-one  field="firm" 
                      target-entity="Client\Domain\Model\Firm"
        >
            <join-column name="Firm_id" referenced-column-name="id" />
        </many-to-one>
        
        <id name="id" type="guid" />
        
        <one-to-one field="form" 
                    target-entity="Shared\Domain\Model\Form"
        >
            <join-column name="Form_id" referenced-column-name="id" />
        </one-to-one>
        
        <field name="removed" type="boolean" />
        
    </entity>
</doctrine-mapping>
