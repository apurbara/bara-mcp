<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Client\ProgramParticipation\ParticipantComment" 
            table="ParticipantComment" 
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineParticipantCommentRepository" 
    >
        
        <many-to-one  field="programParticipation" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <one-to-one field="comment" 
                    target-entity="Client\Domain\Model\Client\ProgramParticipation\Worksheet\Comment"
        >
            <cascade><cascade-persist /></cascade>
            <join-column name="Comment_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>
