<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="Client\Domain\Model\Client\ClientNotification" 
            table="ClientNotification"
            repository-class="Client\Infrastructure\Persistence\Doctrine\Repository\DoctrineClientNotificationRepository"  
    >
        <many-to-one  field="client" 
                      target-entity="Client\Domain\Model\Client"
        >
            <join-column name="Client_id" referenced-column-name="id" />
        </many-to-one>
        <id name="id" type="guid" />
        <field name="message" type="string" length="256" nullable="false"/>
        <field name="read" column="isRead" type="boolean" />
        <field name="notifiedTime" type="date_immutable" nullable="false"/>
        
        <many-to-one  field="consultationRequest" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation\ConsultationRequest"
        >
            <join-column name="ConsultationRequest_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="consultationSession" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation\ConsultationSession"
        >
            <join-column name="ConsultationSession_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="comment" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation\Worksheet\Comment"
        >
            <join-column name="Comment_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one  field="programParticipation" 
                      target-entity="Client\Domain\Model\Client\ProgramParticipation"
        >
            <join-column name="Participant_id" referenced-column-name="id" />
        </many-to-one>
        
    </entity>
</doctrine-mapping>
